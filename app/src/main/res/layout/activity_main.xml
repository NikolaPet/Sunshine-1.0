<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/background_gradient"
    >

    <TextView
        android:id="@+id/textView_lang_eng"
        android:text="English"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="21.5%"
        app:layout_marginTopPercent="40%"
        />

    <Button
        android:id="@+id/button_lang_eng"
        android:background="@drawable/flag_eng"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginTopPercent="45%"
        android:elevation="0dp"
        android:onClick="setLanguage"/>

    <TextView
        android:id="@+id/textView_lang_mk"
        android:text="Македонски"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="61.5%"
        app:layout_marginTopPercent="40%"
        />

    <Button
        android:id="@+id/button_lang_mk"
        android:background="@drawable/flag_mk"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="60%"
        app:layout_marginTopPercent="45%"
        android:onClick="setLanguage"
        />
</android.support.percent.PercentRelativeLayout>





