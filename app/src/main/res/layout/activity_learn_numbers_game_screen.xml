<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_learn_numbers_game_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="com.example.nikola.sunshine.LearnNumbersGameScreenActivity">

    <Button
        android:id="@+id/button_top"
        android:tag="top"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="37.5%"
        />


    <Button
        android:id="@+id/button_top_left"
        android:tag="top_left"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="23%"
        app:layout_marginLeftPercent="5%"
       />

    <Button
        android:id="@+id/button_top_middle"
        android:tag="top_middle"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="23%"
        app:layout_marginLeftPercent="37.5%"
        />

    <Button
        android:id="@+id/button_top_right"
        android:tag="top_right"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="23%"
        app:layout_marginLeftPercent="70%"
        />

    <Button
        android:id="@+id/button_center_left"
        android:tag="center_left"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="43%"
        app:layout_marginLeftPercent="5%"
        />

    <Button
        android:id="@+id/button_center_middle"
        android:tag="center_middle"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="43%"
        app:layout_marginLeftPercent="37.5%"
        />

    <Button
        android:id="@+id/button_center_right"
        android:tag="center_right"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="43%"
        app:layout_marginLeftPercent="70%"
        />

    <Button
        android:id="@+id/button_bottom_left"
        android:tag="bottom_left"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="63%"
        app:layout_marginLeftPercent="5%"
        />

    <Button
        android:id="@+id/button_bottom_middle"
        android:tag="bottom_middle"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="63%"
        app:layout_marginLeftPercent="37.5%"
        />

    <Button
        android:id="@+id/button_bottom_right"
        android:tag="bottom_right"
        android:onClick="onClick"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="63%"
        app:layout_marginLeftPercent="70%"
        />

    <ImageView
        app:srcCompat="@drawable/sun"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_marginTopPercent="75%"
        app:layout_marginLeftPercent="70%"
        android:adjustViewBounds="true"
        android:id="@+id/gameScreen_imageView"
        android:layout_alignParentBottom="true" />

    <ImageView
        app:layout_widthPercent="15%"
        app:layout_heightPercent="15%"
        app:srcCompat="@drawable/face_sun"
        android:adjustViewBounds="true"
        android:id="@+id/image_face_sun"
        app:layout_marginTopPercent="82%"
        app:layout_marginLeftPercent="78%"
        />



</android.support.percent.PercentRelativeLayout>
