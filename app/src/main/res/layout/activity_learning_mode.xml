<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_learning_mode"
    tools:context="com.example.nikola.sunshine.LearningModeActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background_gradient"
    >



    <ImageView

        app:srcCompat="@drawable/sun"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_marginTopPercent="75%"
        app:layout_marginLeftPercent="70%"
        android:adjustViewBounds="true"
        android:id="@+id/imageSun"
        android:layout_alignParentBottom="true" />

    <ImageView
        app:layout_widthPercent="15%"
        app:layout_heightPercent="15%"
        app:srcCompat="@drawable/face_sun"
        android:adjustViewBounds="true"
        android:id="@+id/image_face_sun"

        app:layout_marginTopPercent="82%"
        app:layout_marginLeftPercent="78%"
       />

    <Button
        android:id="@+id/select_course_LEARN_LETTERS"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="25%"
        app:layout_marginTopPercent="50%"
        android:background="@drawable/raindrop2"
        android:adjustViewBounds="true"
        android:onClick="startCourse_LEARN_LETTERS"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/select_course_LEARN_NUMBERS"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="25%"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="15%"
        android:background="@drawable/cloud_base"
        android:adjustViewBounds="true"
        android:onClick="startCourse_LEARN_NUMBERS"

        />

</android.support.percent.PercentRelativeLayout>
